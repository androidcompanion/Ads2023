<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/semi_gray_ad"
    android:layout_height="match_parent">



    <ImageView
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ImageView>

    <RelativeLayout
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/lay_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_ads_white" />

        <LinearLayout
            android:id="@+id/lay_close_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_close_ad"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_close_ad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close_ad"
                android:visibility="visible" />


        </LinearLayout>


    </RelativeLayout>




</RelativeLayout>